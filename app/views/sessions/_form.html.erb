<%= form_for :session, url: session_path do |form| %>
  <div class="form-group">
    <%= form.label :email, class:'form-control' %>
    <%= form.text_field :email, type: 'email', class:'form-control' %>
  </div>

  <div class="password-field">
    <%= form.label :password, class:'form-control' %>
    <%= form.password_field :password, class:'form-control' %>
  </div>

  <div class="submit-field">
    <button type="submit" class="btn"> <%= form.submit %> </button>
  </div>

  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class:"form-control form-control-sm"%>
    <% end %>
    <%= link_to t(".forgot_password"), new_password_path, class:"form-control form-control-sm" %>
  </div>
<% end %>
