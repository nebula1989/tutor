
<!-- Default form login -->
<form class="text-center border border-light p-5" action="#!">
<%= form_for :session, url: session_path do |form| %>

    <!-- Email -->
    <div class="form-group">
      <%= form.label :email, class:'form-control mb-4', id: "defaultLoginFormEmail" %>
      <%= form.text_field :email, type: 'email', class:'form-control' %>
    </div>

    <!-- Password -->
    <div class="form-group">
      <%= form.label :password, class:'form-control mb-4', id:"defaultLoginFormPassword" %>
      <%= form.password_field :password, class:'form-control' %>
    </div>

    <div class="d-flex justify-content-around">
        <div>
            <!-- Remember me -->
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
            </div>
        </div>
        
    </div>

    <!-- Sign in button -->
    <div class="submit-field">
      <button type="submit" class="btn btn-info btn-block my-4"> <%= form.submit %> </button>
    </div>

    <!-- Register -->
    <p>Not a member?
        <div class="other-links">
          <% if Clearance.configuration.allow_sign_up? %>
            <%= link_to t(".sign_up"), sign_up_path, class:"form-control form-control-sm"%>
          <% end %>
          <%= link_to t(".forgot_password"), new_password_path, class:"form-control form-control-sm" %>
        </div>
    </p>

    <!-- Social login -->
    <p>or sign in with:</p>

    <a href="#" class="mx-2" role="button"><i class="fab fa-facebook-f light-blue-text"></i></a>
    <a href="#" class="mx-2" role="button"><i class="fab fa-twitter light-blue-text"></i></a>
    <a href="#" class="mx-2" role="button"><i class="fab fa-linkedin-in light-blue-text"></i></a>
    <a href="#" class="mx-2" role="button"><i class="fab fa-github light-blue-text"></i></a>
    
    
  
    
<% end %>
</form>

<!-- Default form login -->
